@model FinTrack.Models.Transacao
@{
    ViewData["Title"] = "Nova Transação";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ft-page-container">

    <h2 class="fw-bold text-white mb-3">Nova Transação</h2>
    <p class="text-secondary mb-4">Preencha os dados abaixo para registrar uma nova transação.</p>

    <div class="ft-card p-4">

        <form asp-action="Create" method="post">

            <div class="mb-3">
                <label asp-for="Data" class="form-label text-white-50"></label>
                <input asp-for="Data" class="form-control" type="date" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Valor" class="form-label text-white-50"></label>
                <input asp-for="Valor" class="form-control ft-money" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Tipo" class="form-label text-white-50"></label>
                <select asp-for="Tipo" class="form-select" asp-items="ViewBag.Tipos"></select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoriaId" class="form-label text-white-50"></label>
                <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.Categorias"></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ContaId" class="form-label text-white-50"></label>
                <select asp-for="ContaId" class="form-select" asp-items="ViewBag.Contas"></select>
                <span asp-validation-for="ContaId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TipoPagamentoId" class="form-label text-white-50"></label>
                <select asp-for="TipoPagamentoId" class="form-select" asp-items="ViewBag.TiposPagamento"></select>
                <span asp-validation-for="TipoPagamentoId" class="text-danger"></span>
            </div>

            <div class="mt-4 d-flex gap-3">
                <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>

                <button type="submit"
                        class="btn fw-bold px-4"
                        style="background:#ffd700; color:#000; border-radius:10px;">
                    Salvar Transação
                </button>
            </div>

        </form>

    </div>

</div>

<style>
    .ft-card {
        background: rgba(255, 255, 255, 0.04);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 16px;
        backdrop-filter: blur(12px);
    }

    .ft-main-content {
        background: #1e1e1e !important;
        padding: 40px !important;
        min-height: 100vh;
    }

    .ft-page-container {
        max-width: 1100px;
        margin: 0 auto;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Inicializa AutoNumeric (já existente no seu layout via CDN)
            AutoNumeric.multiple('.ft-money', {
                digitGroupSeparator: ".",
                decimalCharacter: ",",
                decimalPlaces: 2,
                currencySymbol: "R$ ",
                currencySymbolPlacement: "p"
            });

            // Antes de enviar o formulário, "desformatamos" os campos ft-money
            const form = document.querySelector('form[asp-action="Create"]') || document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function (e) {
                    // para cada input com .ft-money, converte "R$ 1.234,56" -> "1234.56"
                    document.querySelectorAll('.ft-money').forEach(function (el) {
                        if (!el) return;
                        // valor formatado pelo AutoNumeric (ex: "R$ 1.234,56")
                        let v = el.value ?? '';

                        // Remove tudo que não seja dígito, vírgula ou ponto ou sinal de menos
                        // Em seguida, trocar separador de decimal brasileiro ',' por '.'
                        // e remover separadores de milhar (pontos)
                        // Ex: "R$ 1.234,56" -> "1234.56"
                        v = v.replace(/\s/g, '');            // remove espaços
                        v = v.replace(/R\$|r\$/g, '');       // remove símbolo R$ se houver
                        v = v.replace(/\./g, '');            // remove separador de milhar
                        v = v.replace(/,/g, '.');            // transforma decimal vírgula -> ponto

                        // Se vazio, mantém vazio (deixa o model binder tratar)
                        el.value = v;
                    });
                    // deixa o envio prosseguir
                }, { once: false });
            }
        });
    </script>
}
